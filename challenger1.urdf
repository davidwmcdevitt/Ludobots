<robot name = "robot">
    <link name="Base">
        <inertial>
            <origin xyz="0 2.5 0.25" rpy="0 0 0"/>
            <mass value="1" />
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>
        <visual>
            <origin xyz="0 2.5 0.25" rpy="0 0 0"/>
            <geometry>
                <box size="5 5 0.25" />
            </geometry>
            <material name="Green">
                <color rgba="0 1.0 0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 2.5 0.25" rpy="0 0 0"/>
            <geometry>
                <box size="5 5 0.25" />
            </geometry>
        </collision>
    </link>
    <joint name="Base_Head" type="fixed">
       <parent link="Base"/>
       <child  link="Head"/>
       <origin rpy="0 0 0" xyz="0 0 0" />
     <axis xyz="1 0 1"/>
       <limit effort="0.0" lower="-3.14159" upper="3.14159" velocity="0.0"/>
    </joint>
    <link name="Head">
        <inertial>
            <origin xyz="0 2.5 0.75" rpy="0 0 0"/>
            <mass value="1" />
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>
        <visual>
            <origin xyz="0 2.5 0.75" rpy="0 0 0"/>
            <geometry>
                <box size="1 1 1" />
            </geometry>
            <material name="Green">
                <color rgba="0 1.0 0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 2.5 0.75" rpy="0 0 0"/>
            <geometry>
                <box size="1 1 1" />
            </geometry>
        </collision>
    </link>
</robot>